<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="/">Clickhole Scraper</a>
  <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false"
    aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="btn btn-danger scrape-new">SCRAPE NEW ARTICLES!</a>
      </li>
    </ul>
  </div>
</nav>

<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Clickhole Scraper</h1>
  </div>
</div>
<div class="container-fluid article-container">
    {{#each Articles}}
        <div class="card">
            <div class="card-header">
                <h3>
                    <a href={{link}} target="_blank">{{headline}}</a>
                    <a class="btn btn-success notes" data-id={{_id}}>Check Notes</a>
                    <a class="btn btn-danger delete" data-id="{{_id}}">Delete</a>
                </h3>
            </div>
            <div class="card-body">
                {{summary}}
            </div>
        </div>
    {{/each}}
</div>

<div class="modal fade show" id="notes-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="container-fluid text-center">
                    <h4>Notes</h4>
                    <ul class="list-group note-container">
                    
                    </ul>
                    <textarea placeholder="Add a new note here" name="New Note" id="new-note" cols="50" rows="4"></textarea>
                    <a class="btn btn-success addNote">Submit Note</a>
                </div>
            </div>
        </div>
    </div>
</div>